<div class="container">
  <% if @question.errors.any? %>
    <%= @question.errors.count %>件のエラーが発生しました
    <ul>
      <% @question.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="row">
    <h3 class="col-md-3 mt-5 offset-md-2">質問投稿</h3>
  </div>
  <div class="row">
    <div class="col-md-6 offset-md-3 mt-5">
    <%= form_with model: @question do |f| %>
      <p>画像</p>
      <%= f.file_field :image, accept: "image/*" %>
      <p class="pt-4">質問タイトル</p>
      <div class="form_group">
        <%= f.text_field :title, placeholder: "タイトル", class: "form-control" %>
      </div>
      <p class="pt-4">質問内容</p>
      <div class="form-group" >
        <%= f.text_area :caption, placeholder: "質問内容...", rows: 7, class: "form-control" %>
      </div>
      <div class="form-group row">
        <div class="offset-md-1">
          <%= f.submit '投稿', class:"btn btn-success" %>
        </div>
      </div>
    <% end %>
    </div>
  </div>