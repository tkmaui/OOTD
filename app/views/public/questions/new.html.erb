<h1>質問する</h1>
  <%= form_with model: @question do |f| %>
    <h4>画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
    <h4>タイトル</h4>
      <%= f.text_field :title %>
    <h4>説明</h4>
      <%= f.text_area :caption %>
    <%= f.submit '投稿' %>
  <% end %>

  <div class="container">
  <div class="row">
    <h3 class="col-md-3 mt-5 offset-md-2">コーディネート投稿</h3>
  </div>
  <div class="row">
    <div class="col-md-6 offset-md-3 mt-5">
    <%= form_with model: @outfit do |f| %>
      <p>画像</p>
      <%= f.file_field :image, accept: "image/*" %>
      <p class="pt-4">質問タイトル</p>
      <div class="form_group">
        <%= f.text_field :title, placeholder: "タイトル", class: "form-control" %>
      </div>
      <p class="pt-4">質問内容</p>
      <div class="form-group" >
        <%= f.text_area :caption, placeholder: "質問内容...", rows: 7, class: "form-control" %>
      </div>
      <div class="form-group row">
        <div class="offset-md-1">
          <%= f.submit '投稿', class:"btn btn-success" %>
        </div>
      </div>
    <% end %>
    </div>
  </div>