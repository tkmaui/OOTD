<% @outfits.each do |outfit| %>
<div>
  <%= image_tag outfit.image, size: "250x200" %>
  <p>タイトル：<%= outfit.title %></p>
  <p>説明：<%= outfit.caption %></p>
  <p><%= link_to "#{outfit.comments.count} コメント", outfit_path(outfit.id) %></p>
</div>
<%= link_to "詳細",outfit_path(outfit.id) %>
<% end %>

<% @customers.each do |customer| %>
<div>
  <%= link_to customer_path(customer.id) do %>
    <%= image_tag customer.get_profile_image(100,100) %>
    <p><%= customer.nickname %></p>
  <% end %>
</div>
<% end %>