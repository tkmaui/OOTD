<h2>プロフィール編集</h2>
<%= form_with model: @customer do |f| %>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  <%= f.text_field :nickname %>
  <%= f.select :gender, *[男性.女性.未回答] %>
  <%= f.text_field :tall %>
  <%= f.text_field :introduction %>
  <%= f.submit "変更を保存" %>
<% end %>