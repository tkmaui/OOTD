<div class="container">
  <div class="row">
    <h3 class="col-md-3 mt-5">投稿一覧</h3>
  </div>
  <div class="row mt-5">
    <% @outfits.each do |outfit| %>
      <div class="pr-4 pb-5">
        <div class="card">
            <%= link_to admin_outfit_path(outfit.id) do %>
              <%= image_tag outfit.image, size: "250x380" %>
            <% end %>
          <div class="card-body">
              <%= image_tag outfit.customer.get_profile_image(35,35), size: "35x35", class:" rounded-circle" %>
            <span><%= outfit.customer.nickname %> ｜ </span>
            <span><%= link_to "#{outfit.comments.count} コメント", admin_outfit_path(outfit.id), class:"text-dark" %></span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%=link_to "もっと見る", outfits_path, class: "btn btn-outline-secondary" %>
</div>