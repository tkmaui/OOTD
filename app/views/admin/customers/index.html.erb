<div class="container">
  <div class="row mt-5">
    <% @customers.each do |customer| %>
      <div class="pr-5 pb-5">
        <div class="card" style="height: 16rem;">
          <%= link_to admin_customer_path(customer.id) do %>
              <%= image_tag customer.get_profile_image(160,160), size: "160x160" %>
          <% end %>
        <div class="card-body">
          <p class="text-center"><%= customer.nickname %></p>
          <p class="small text-muted text-center"><%= customer.gender %>|<%= customer.tall %></p>
        </div>
        </div>
      </div>
    <% end %>
  </div>
</div>