<% @questions.each do |question| %>
<div>
  <%= image_tag question.image, size: "250x200" %>
  <p>タイトル：<%= question.title %></p>
  <p>説明：<%= question.caption %></p>
  <p>♡<%= question.question_favorites.count %> いいね</p>
  <p><%= link_to "#{question.answers.count} コメント", admin_question_path(question.id) %></p>
</div>
<%= link_to "詳細",admin_question_path(question.id) %>
<% end %>